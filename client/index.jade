doctype 5
head
	meta(charset="UTF-8")
	title(data-bind="text: title")

	// Icon
	link(rel="shortcut icon", href=icon)

	// Styles
	each sheet in styles
		link(rel="stylesheet", href=sheet)

	// Templates
	each tmpl in templates
		script(type=tmpl.type, id=tmpl.id, src=tmpl.path)= tmpl.content

	// Source loader
	script(data-main=loader.main, src=loader.path)

body
	#top.navbar.navbar-inverse: .navbar-inner
		button#btn-sidebar.btn.btn-navbar(data-bind="\
			click: toggleSidebar,\
			css: { disabled: !isAuthorized(), active: !sidebarIsClosed() }\
		")
			span.icon-bar
			span.icon-bar
			span.icon-bar

		a#logo.brand(href="#") Desi

		ul.nav.pull-right(data-bind="with: locale().menu")
			// ko ifnot: $root.isAuthorized
			li: a(href="#login", data-bind="text: login")
			li: a(href="#signup", data-bind="text: signup")
			// /ko
			// ko if: $root.isAuthorized
			li: a(href="#logout", data-bind="text: logout")
			// /ko

	// ko if: isAuthorized
	#sidebar(data-bind="css: { closed: sidebarIsClosed }")
		ul.nav.nav-list
			li One
			li Two
			li Three
			li Four
	// /ko

	#main
		// ko if: isAuthorized
		#lookup(data-bind="section: lookup")
		#area(data-bind="section: area")
		#share(data-bind="section: share")
		// /ko

		// ko ifnot: isAuthorized
		#login(data-bind="section: login")
		#signup(data-bind="section: signup")
		// /ko
